{$DOMAIN:localhost} {
    # Frontend
    handle {
        reverse_proxy client:80
    }

    # API
    handle /api/* {
        reverse_proxy api:5000
    }

    # SignalR WebSocket
    handle /hubs/* {
        reverse_proxy api:5000
    }

    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
        -Server
    }

    # Gzip compression
    encode gzip

    log {
        output file /data/access.log {
            roll_size 10mb
            roll_keep 5
        }
    }
}
